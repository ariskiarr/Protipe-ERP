{
  "name": "ksteel-erp",
  "version": 2,
  "public": true,
  "cleanUrls": true,
  "trailingSlash": false,
  "github": {
    "silent": true
  },
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/login", "destination": "/login.html" },
    { "source": "/sales", "destination": "/index-sales.html" },
    { "source": "/warehouse", "destination": "/index-warehouse.html" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/pages/(.*)", "dest": "/pages/$1" },
    { "src": "/js/(.*)", "dest": "/js/$1" },
    { "src": "/css/(.*)", "dest": "/css/$1" },
    { "src": "/images/(.*)", "dest": "/images/$1" },
    { "src": "/(.*)", "status": 404, "dest": "/index.html" }
  ]
}
